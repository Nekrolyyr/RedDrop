    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Zip Code"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/textView6"
        app:layout_constraintTop_toTopOf="@id/textView6" />

    <EditText
        android:id="@+id/dateOfBirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:focusable="false"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@id/editText5"
        app:layout_constraintTop_toTopOf="@id/textView8" />

    <TextView
        android:id="@+id/textView_bloodtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Blood type"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/textView8"
        app:layout_constraintTop_toTopOf="@id/textView8" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textNoSuggestions"
        app:layout_constraintStart_toStartOf="@id/editText5"
        app:layout_constraintTop_toTopOf="@id/textView_bloodtype" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="*mandatory fields"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/textView1"
        app:layout_constraintTop_toBottomOf="@id/textView_bloodtype" />

    <Button
        android:id="@+id/btn_saveLife"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="85dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Ready to save lifes"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>