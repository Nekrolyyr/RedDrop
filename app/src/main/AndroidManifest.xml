<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.versusvirus.reddrop">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.ProfileActivity" />
        <activity android:name=".ui.AppointmentActivity" />
        <activity android:name=".ui.LocationActivity" />
        <activity android:name=".ui.SurveyActivity" />
        <activity android:name=".ui.SurveyResultActivity" />
        <activity android:name=".ui.HomeActivity" />
        <activity android:name=".ui.WellcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>